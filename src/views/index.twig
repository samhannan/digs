{% extends "layouts/main.twig" %}

{% block title %}Index{% endblock %}

{% block content %}

<div class="jumbotron">
	<div class="container">
		<div class="logo text-center">
			<h2>Brand</h2>
		</div>
	</div>
</div>

<div class="col-sm-4 col-sm-offset-4 search-index">
	<h1 class="text-center">Where are you staying?</h1>
	<form action="" class="">
		<div class="form-group">
			<input type="text" class="form-control town-search" name="place" placeholder="Eg, Leeds, Manchester, Bradford...">
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-center">Find Your Hotel</button>
		</div>
	</form>
</div>

{% endblock %}
